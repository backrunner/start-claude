{
  "compilerOptions": {
    "target": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowUmdGlobalAccess": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noEmit": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/cli/**/*",
    "src/commands/**/*",
    "src/config/**/*",
    "src/core/**/*",
    "src/services/**/*",
    "src/storage/**/*",
    "src/types/**/*",
    "src/transformers/**/*",
    "src/utils/**/*",
    "src/plugin/**/*",
    "tests/**/*",
    "scripts/**/*",
    "rollup.config.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "src/manager/**/*", ".history", "bin"]
}
