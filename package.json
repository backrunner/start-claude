{
  "name": "start-claude",
  "type": "module",
  "version": "0.3.1",
  "packageManager": "pnpm@10.14.0",
  "description": "Start your claude code with specified config friendly :D",
  "author": "BackRunner",
  "license": "MIT",
  "homepage": "https://github.com/backrunner/start-claude",
  "repository": {
    "type": "git",
    "url": "https://github.com/backrunner/start-claude.git"
  },
  "keywords": [
    "claude",
    "cli tool"
  ],
  "main": "./bin/cli.cjs",
  "module": "./bin/cli.mjs",
  "bin": {
    "start-claude": "./bin/cli.mjs",
    "scc": "./bin/cli.mjs"
  },
  "files": [
    "bin"
  ],
  "workspaces": [
    "src/manager",
    "src/migrator"
  ],
  "scripts": {
    "build": "node --experimental-strip-types scripts/clean.ts && cross-env NX_DAEMON=false nx run-many --target=build --all && pnpm run postbuild",
    "build:cli": "cross-env NX_DAEMON=false nx build start-claude-cli",
    "build:manager": "cross-env NX_DAEMON=false nx build manager",
    "postbuild": "node --experimental-strip-types scripts/postbuild.ts",
    "dev": "cross-env NX_DAEMON=false nx serve manager",
    "dev:manager": "cross-env NX_DAEMON=false nx serve manager",
    "watch": "cross-env NX_DAEMON=false nx build start-claude-cli --watch",
    "lint": "cross-env NX_DAEMON=false nx run-many --target=lint --all",
    "lint:fix": "cross-env NX_DAEMON=false nx run-many --target=lint --all --fix",
    "lint:inspect": "pnpm dlx @eslint/config-inspector",
    "test": "cross-env NX_DAEMON=false nx run-many --target=test --all",
    "test:run": "cross-env NX_DAEMON=false nx run-many --target=test --all --passWithNoTests",
    "test:coverage": "cross-env NX_DAEMON=false nx run-many --target=test --all --coverage",
    "typecheck": "cross-env NX_DAEMON=false nx run-many --target=typecheck --all",
    "version": "cross-env NX_DAEMON=false nx release version",
    "version:patch": "cross-env NX_DAEMON=false nx release version patch",
    "version:minor": "cross-env NX_DAEMON=false nx release version minor",
    "version:major": "cross-env NX_DAEMON=false nx release version major",
    "release": "cross-env NX_DAEMON=false nx release",
    "release:dry-run": "cross-env NX_DAEMON=false nx release --dry-run",
    "nx": "cross-env NX_DAEMON=false nx"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@start-claude/migrator": "workspace:*",
    "boxen": "^8.0.1",
    "chalk": "^5.5.0",
    "commander": "^14.0.0",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "inquirer": "^12.9.2",
    "next": "^15.4.6",
    "open": "^10.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@nx/jest": "^21.3.11",
    "@nx/js": "^21.3.11",
    "@nx/linter": "^19.8.4",
    "@nx/next": "^21.3.11",
    "@nx/rollup": "^21.3.11",
    "@nx/workspace": "^21.3.11",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/inquirer": "^8.2.12",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-format": "^1.0.1",
    "nx": "21.3.11",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
