{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["packages/cli/src/*"],
      "@start-claude/migrator": ["packages/migrator/dist/index"]
    },
    "resolveJsonModule": true,
    "allowUmdGlobalAccess": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": false,
    "noEmit": false,
    "removeComments": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/cli/src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "tests/**/*",
    "scripts/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "bin",
    ".history",
    "dist",
    "lib",
    "libs",
    "coverage",
    "packages/manager/**/*"
  ]
}
