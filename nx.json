{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "test": {
      "cache": true,
      "inputs": ["default", "^default"]
    },
    "lint": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json", "{workspaceRoot}/.eslintignore"]
    },
    "typecheck": {
      "cache": true,
      "inputs": ["default", "{projectRoot}/tsconfig.json"]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/next/plugin",
      "options": {
        "startTargetName": "start",
        "buildTargetName": "build",
        "devTargetName": "dev",
        "serveStaticTargetName": "serve-static"
      }
    },
    {
      "plugin": "@nx/rollup/plugin",
      "options": {
        "buildTargetName": "build"
      }
    }
  ],
  "release": {
    "projects": ["start-claude-cli", "manager"],
    "projectsRelationship": "fixed",
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github",
        "file": "CHANGELOG.md",
        "entryWhenNoChanges": "This release contains no user-facing changes."
      },
      "projectChangelogs": false,
      "git": {
        "commit": true,
        "commitMessage": "chore(release): update changelog for v{version}",
        "commitArgs": "--no-verify"
      }
    },
    "version": {
      "preVersionCommand": "nx run-many --target=build --all",
      "generatorOptions": {
        "packageRoot": ".",
        "currentVersionResolver": "git-tag",
        "specifierSource": "conventional-commits"
      },
      "git": {
        "commit": true,
        "commitMessage": "chore(release): publish v{version}",
        "commitArgs": "--no-verify",
        "tag": true,
        "tagMessage": "v{version}",
        "tagArgs": "--force"
      }
    }
  }
}